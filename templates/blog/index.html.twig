{% extends 'base.html.twig' %}

{% block title %}Mon Blog!{% endblock %}

{% block body %}



<div class="col-lg-8 col-md-10 mx-auto">
    <div class="post-preview">
        {#{{ dump(articles) }}#}
        
        {% for key, article in articles %}
          <a href="{{ path('article', {id: article.id}) }}">
            <h2 class="post-title">
              {{ article.title|e }}
            </h2>
            <h3 class="post-subtitle">
              {{ article.content|e|truncate(30,true,'...') }}
            </h3>
          </a>
          <picture><img src="img/{{ article.picture|e }}" alt"photo de l'article"></picture>
          <p class="post-meta">Created by
            <a href="#">Marina LB</a>
            {{ article.createdAt|date('d/m/Y') }}</p>
          <p class="post-meta">Posted by
            <a href="#">Marina LB</a>
            {{ article.publishedAt|date('d/m/Y') }}</p>
          {% endfor %}
          
        </div>
        <hr>
        
       
        <!-- Pager -->
        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
      </div>
    </div>
  </div>

  <hr>

{% endblock %}
